<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.enimbe.anecdot.post.dao.PostDAO">
 
 	<insert id="insertPost" parameterType="com.enimbe.anecdot.post.model.Post" useGeneratedKeys="true" keyProperty="id">
 		INSERT INTO `post`
 		(
 			`userId`
 			, `title`
 			, `content`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{title}
 			, #{content}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectPost" parameterType="int" resultType="com.enimbe.anecdot.post.model.Post">
 		SELECT 
 			`id`
 			, `userId`
 			, `title`
 			, `content`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{id}
 	</select>
 	
 	
 	<insert id="insertImage" parameterType="map">
 		INSERT INTO `images`
 		(
 			`userId`
 			, `postId`
 			, `imagePath`
 			, `gallery`
 			, `public`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{postId}
 			, #{imagePath}
 			, #{gallery}
 			, #{public}
 			, now()
 			, now()
 		)
 	</insert>
 
 </mapper>