<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.enimbe.anecdot.user.dao.UserDAO">
 
 	<insert id="insertUser" parameterType="map">
 		INSERT INTO `user`
 		(
 			`userID`
 			, `password`
 			, `name`
 			, `email`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userID}
 			, #{password}
 			, #{name}
 			, #{email}
 			, now()
 			,now()
 		)
 	</insert>
 	
 	<select id="selectCountById" parameterType="string" resultType="int">
 		SELECT
 			count(*)
 		FROM
 			`user`
 		WHERE
 			`userID` = #{userID}
 	</select>
 
 	<select id="selectUserByIdPassword" parameterType="map" resultType="com.enimbe.anecdot.user.model.User">
 		SELECT
 			`id`
 			,`userID`
 			, `password`
 			, `name`
 			, `email`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`userID` = #{userID}
 			AND `password` = #{password}
 	
 	</select>
 
 </mapper>